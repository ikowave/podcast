---
layout: null
---
<?xml version="1.0" encoding="UTF-8"?>
<rss xmlns:itunes="http://www.itunes.com/dtds/podcast-1.0.dtd" xmlns:content="http://purl.org/rss/1.0/modules/content/" version="2.0">
    <channel>
        <title>{{ site.title }}</title>
        <description>{{ site.description }}</description>
        <link>{{ site.url }}{{ site.baseurl }}</link>
        <language>en-us</language>
        <copyright>Â© {{ 'now' | date: "%Y" }} {{ site.title }}</copyright>
        
        <!-- iTunes specific tags -->
        <itunes:author>{{ site.title }}</itunes:author>
        <itunes:summary>{{ site.description }}</itunes:summary>
        <itunes:type>episodic</itunes:type>
        <itunes:owner>
            <itunes:name>{{ site.title }}</itunes:name>
            <itunes:email>{{ site.email }}</itunes:email>
        </itunes:owner>
        <itunes:explicit>false</itunes:explicit>
        <itunes:category text="Technology">
            <itunes:category text="Artificial Intelligence"/>
        </itunes:category>
        <itunes:image href="{{ site.url }}{{ site.baseurl }}/assets/ikowave.png"/>
        <image>
            <url>{{ site.url }}{{ site.baseurl }}/assets/ikowave.png</url>
            <title>{{ site.title }}</title>
            <link>{{ site.url }}{{ site.baseurl }}</link>
        </image>
        
        {% for post in site.posts %}
        <item>
            <title>{{ post.title }}</title>
            <description>{{ post.content | xml_escape }}</description>
            <pubDate>{{ post.date | date_to_rfc822 }}</pubDate>
            <link>{{ site.url }}{{ site.baseurl }}{{ post.url }}</link>
            <guid isPermaLink="true">{{ site.url }}{{ site.baseurl }}{{ post.url }}</guid>
            <enclosure url="{{ site.url }}{{ site.baseurl }}/episodes/episode{{ post.episode_number }}.mp3" type="audio/mpeg" length="{{ post.file_size | default: '0' }}"/>
            
            <!-- iTunes specific episode tags -->
            <itunes:title>{{ post.title }}</itunes:title>
            <itunes:author>{{ site.title }}</itunes:author>
            <itunes:duration>{{ post.duration | default: '00:00' }}</itunes:duration>
            <itunes:summary>{{ post.content | strip_html | truncate: 4000 | xml_escape }}</itunes:summary>
            <itunes:image href="{{ site.url }}{{ site.baseurl }}/assets/ikowave.png"/>
            <itunes:explicit>false</itunes:explicit>
            <itunes:episodeType>full</itunes:episodeType>
        </item>
        {% endfor %}
    </channel>
</rss>
